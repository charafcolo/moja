@model AddCandidatureViewModel
@{
    ViewData["Date"] = DateTime.Now;
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PostName" class="control-label"></label>
        <input asp-for="PostName" class="form-control" />
        <span asp-validation-for="PostName" class="text-danger"></span>
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
        <label asp-for="ModificationDate" class="control-label"></label>
        <br />
        @Html.EditorFor(model => model.ModificationDate)
        <span asp-validation-for="ModificationDate" class="text-danger"></span>
        <br />
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
        <label asp-for="EntrepriseName" class="control-label"></label>
        <input asp-for="EntrepriseName" class="form-control" />
        <span asp-validation-for="EntrepriseName" class="text-danger"></span>
        <label asp-for="EntrepriseCity" class="control-label"></label>
        <input asp-for="EntrepriseCity" class="form-control" id="ville"/>
        <span asp-validation-for="EntrepriseCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
